# Server Configuration
PORT=3001
NODE_ENV=development

# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017/purpose-planner-auth

# JWT Secret
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRATION=1d

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=https://api.elitessystems.com/api/auth/google/callback

# Client Redirect
CLIENT_REDIRECT_URL=https://elitessystems.com/login?token=

# Logging
LOG_LEVEL=info

# Cors
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,https://elitessystems.com